<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDarkGray</item>
    </style>

    <style name="com_dot_line" parent="dot_line">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="dot_line" parent="line_height">
        <item name="android:layout_height">2dp</item>
        <item name="android:layerType">software</item>
        <item name="android:background">@drawable/dot_line</item>
    </style>

    <style name="line_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
    </style>

    <style name="new_title_circle_style">
        <item name="android:layout_width">9dp</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@drawable/circle_ring</item>
    </style>

    <style name="new_draw_left_style" parent="work_detail_dialog_com_sec_title_style">
        <item name="android:drawableLeft">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="work_detail_dialog_com_sec_title_style" parent="knowledge_des_style">
        <item name="android:drawableLeft">@drawable/icon_ellipse</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#818483</item>
    </style>

    <style name="knowledge_des_style" parent="order_entry_des_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6A7C8B</item>
    </style>

    <style name="order_entry_des_style" parent="wrapWidthH">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="wrapWidthH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="new_commit_container_style" parent="wrapHeight">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#F5F6F6</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="wrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="new_commit_content_style" parent="wrapHeight">
        <item name="android:background">@drawable/shape_whitle_bg</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="new_commit_style" parent="wrapWidthH">
        <item name="android:drawableLeft">@drawable/new_confirm</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#30be9b</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
