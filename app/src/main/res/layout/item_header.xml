    <RelativeLayout
        android:id="@+id/standard_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <View
            android:id="@+id/inspection_entry_line"
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:background="#1D7EF9" />

        <TextView
            android:id="@+id/inspection_entry_score_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/inspection_entry_line"
            android:text="详细评分标准"
            android:textColor="#6A7C8B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/detail_score_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inspection_entry_score_standard"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/inspection_entry_line"
            android:textColor="#818483"
            android:textSize="14sp" />
    </RelativeLayout>

    <View style="@style/com_dot_line" />
